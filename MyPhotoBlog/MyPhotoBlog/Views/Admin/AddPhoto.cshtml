@model MyPhotoBlog.Models.Entities.Photo


@using (Html.BeginForm("AddPhoto", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.CategoryId, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.DropDownListFor(m => m.CategoryId, new SelectList(ViewBag.Categories, "Id", "Name"), "--Seçiniz")
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.Title)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextAreaFor(m => m.Description)
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Yüklenecek Dosya", new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            <input type="file" name="file" />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Yükle / Kaydet"  class="btn btn-outline-primary btn-sm"/>
    </div>
}

